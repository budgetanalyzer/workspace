{
  "name": "Budget Analyzer",
  "dockerComposeFile": "../claude-code-sandbox/docker-compose.yml",
  "service": "claude-dev",
  "workspaceFolder": "/workspace",
  "shutdownAction": "none",

  "initializeCommand": "bash ${localWorkspaceFolder}/claude-code-sandbox/setup-env.sh",

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true
    }
  },

  "onCreateCommand": "sudo npm update -g @anthropic-ai/claude-code @openai/codex @google/gemini-cli",

  "remoteEnv": {
    "SSH_AUTH_SOCK": "",
    "CLAUDE_CODE_DISABLE_AUTO_MEMORY": "1"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code"
      ]
    }
  }
}
